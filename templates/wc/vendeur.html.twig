{% extends 'base.html.twig' %}

{% block title %}Hello WcController!{% endblock %}
{% block head %}
{% endblock %}
{% block body %}
    <div class="container-fluid p-0">
					<div class="row mb-2 mb-xl-3">
						<div class="col-auto d-none d-sm-block">
							<h3><strong>Vendeur</strong> manage</h3>
						</div>

					</div>
                    <div class="row">
						
						<div class="col-12 col-md-12 col-xxl-6 d-flex order-3 order-xxl-2">
							<div class="card flex-fill w-100">
								<div class="card-header">

									<h5 class="card-title mb-0">Liste coiffeuse</h5>
								</div>
								<div class="card-body px-4">
									<div class="col-sm">
										<div class="py-3">
											<div class="chart chart-xs">
												<table class="table table-stripped table-hover table-bordered">

											<tbody id="original" class="og" style="backgroung-color: grey">
												{% for ligne in listeVendeurs %}
													<tr>
														<td>
															{{ ligne.Nom }}
														</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-12 col-md-6 col-xxl-3 d-flex order-1 order-xxl-1">
							<div class="card flex-fill">
								<div class="card-header">

								<h5 class="card-title mb-0">Creer un vendeur</h5>
								</div>
								<div class="card-body d-flex">
									<div class="align-self-center w-100">
										<div class="chart">
											<div class="form">
													{{ form_start(formSignup) }}
														<div class="input-group">
															<div class="input-group-prepend">
																<span class="input-group-text">
																</span>
															</div>
														{{form_row (formSignup.Nom, {
																		'attr':{
																			'type' : "text",
																			'class' : "form-controle",
																			'placeholder' : 'Nom' 
																			}
																		})}}

														</div>
														<div class="footer text-center">
														<button type="submit" class="btn btn-succes">
																Ajouter
														</button>
													</div>{{ form_end(formSignup) }}
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
{% endblock %}
